<h1>MASTER VIEW</h1>
<p><button type="button" class="btn btn-default show-form-button">New Album</button></p>
<form role="form" action="/add" method="POST" class="add-form hide form-horizontal">
            <div class="form-group">
                <label for="addAlbumName" class="col-sm-2">Album Name</label>
                <div class="col-sm-10">
                    <input type="text"
                    id="addAlbumName" name="addAlbumName" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <label for="addArtist" class="col-sm-2">Artist</label>
                <div class="col-sm-10">
                    <input type="text"
                    id="addArtist" name="addArtist" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="addRelease" class="col-sm-2">Release Date</label>
                <div class="col-sm-3">
                    <input type="date"
                    id="addRelease" name="addRelease" pattern="\d{1,2}-\d{1,2}-\d{4}" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="addArtist" class="col-sm-2">Number of Tracks</label>
                <div class="col-sm-2">
                    <input type="number"
                    id="addTracks" name="addTracks" min="1" max="100" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">In Stock?</label>
                <div class="col-sm-10">
                    <label class="radio-inline"><input type="radio" name="addInStock" value="true">&nbsp;Yes</label>
                    <label class="radio-inline"><input type="radio" name="addInStock" value="false">&nbsp;No</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-default" id="add" value="Add"/>
                </div>
            </div>
        </form>
<h3>All Albums</h3>
<ul class='main-list'>
    {{#each albums}}
    <li class="list-album">
        <div>
            <a href="album/{{slug}}"><p><strong>{{name}}: </strong>{{artist}}</p></a>
            {{#if inStock}}
            <p>Now in Stock!</p>
            {{/if}}
        </div>
    </li>
    {{/each}}
 </ul>  